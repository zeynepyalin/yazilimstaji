@model OgrenciNotMVC.Models.EntityFramework.TBLOGRENCILER
@{
    ViewBag.Title = "YeniOgrenci";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <form method="post" class="form-group">
        <div>
            <label>Öğrenci Adı</label>
            <input type="text" class="form-control" name="OGRAD" /> 
        </div>
        <div style="margin-top:15px">
            <label>Öğrenci Soyadı</label>
            <input type="text" class="form-control" name="OGRSOYAD" /> 
        </div>
        <div style="margin-top:15px">
            <label>Öğrenci Fotoğraf</label>
            <input type="text" class="form-control" name="OGRFOTO" />  
        </div>
        <div style="margin-top:15px">
            <label>Öğrenci Cinsiyeti</label>
            <input type="text" class="form-control" name="OGRCINSIYET" /> 
        </div>
        <div style="margin-top:15px">
            <label>Öğrenci Kulübü</label>
            @Html.DropDownListFor(m=>m.TBLKULUPLER.KULUPID,(List<SelectListItem>)ViewBag.dgr,new { @class="form-control"})
        </div>
        <div style="margin-top:10px">
            <button class="btn btn-info">Öğrenci Ekle</button>
        </div>
    </form>
</div>